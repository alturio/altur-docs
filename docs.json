{
  "$schema": "https://mintlify.com/docs.json",
  "name": "Altur",
  "theme": "mint",
  "logo": {
    "dark": "/logo/dark.svg",
    "light": "/logo/light.svg"
  },
  "favicon": "/favicon.png",
  "colors": {
    "primary": "#0066FF",
    "light": "#0066FF",
    "dark": "#0066FF"
  },
  "background": {
    "decoration": "grid",
    "color": {
      "light": "#FFFFFF",
      "dark": "#0D1117"
    }
  },
  "navbar": {
    "links": [
      {
        "label": "Blog",
        "href": "https://altur.io/blog"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Open App",
      "href": "https://app.altur.io"
    }
  },
  "navigation": {
    "languages": [
      {
        "language": "en",
        "tabs": [
          {
            "tab": "Documentation",
            "groups": [
              {
                "group": "Get Started",
                "pages": [
                  "en/documentation/introduction"
                ]
              }
            ]
          },
          {
            "tab": "API Reference",
            "groups": [
              {
                "group": "Getting Started",
                "pages": [
                  "en/api-reference/introduction",
                  "en/api-reference/authentication"
                ]
              },
              {
                "group": "API Endpoints",
                "pages": [
                  {
                    "group": "Calls",
                    "icon": "phone",
                    "pages": [
                      "en/api-reference/calls/retrieve",
                      "en/api-reference/calls/retrieve-recording"
                    ]
                  },
                  {
                    "group": "Messages",
                    "icon": "message",
                    "pages": [
                      "en/api-reference/messages/send",
                      "en/api-reference/messages/retrieve"
                    ]
                  },
                  {
                    "group": "Threads",
                    "icon": "messages",
                    "pages": [
                      "en/api-reference/threads/retrieve"
                    ]
                  },
                  {
                    "group": "EndUsers",
                    "icon": "user",
                    "pages": [
                      "en/api-reference/endusers/create",
                      "en/api-reference/endusers/retrieve",
                      "en/api-reference/endusers/update",
                      "en/api-reference/endusers/delete"
                    ]
                  }
                ]
              },
              {
                "group": "Webhooks",
                "pages": [
                  "en/api-reference/webhooks/overview",
                  {
                    "group": "Webhook Events",
                    "icon": "bolt",
                    "pages": [
                      "en/api-reference/webhooks/on-call-end"
                    ]
                  }
                ]
              }
            ]
          }
        ]
      }
    ]
  },
  "footer": {
    "socials": {
      "github": "https://github.com/alturio",
      "linkedin": "https://www.linkedin.com/company/alturio"
    }
  }
}